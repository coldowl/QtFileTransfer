/* PathLineEdit */
QLineEdit#pathLineEdit{
    color: blue;
    background-color: yellow;
    selection-color: yellow;
    selection-background-color: blue;
    border: 1px solid #d0d0d0;
    border-radius: 5px;
    padding: 5px;
}
QLineEdit:hover {
    border: 1px solid #007BFF;
}
QLineEdit:focus {
    border: 1px solid #0056b3;
}


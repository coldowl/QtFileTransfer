/* TreeView */
QTreeView {
    border: 1px solid #d0d0d0;
    border-radius: 5px;
}
QTreeView::item:hover {

}
QTreeView::item:selected {

}

/*QTreeView */QScrollBar:vertical {
    /* 设置滚动条宽度 */
    width: 8px; /* 根据需要调整宽度 */

    /* 其他样式设置 */
    border: none;
    background: rgba(0,0,0,0%);
    margin: 0px;
    padding-top: 2px; /* 调整顶部留空，如果需要的话 */
}

/*QTreeView */QScrollBar::handle:vertical{
    /* 滚动条拖动部分的样式 */
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                                stop: 0 rgb(100, 100, 100),
                                stop: 1 rgb(200, 200, 200)); /* 自定义颜色 */
    min-height: 20px; /* 拖动块的最小高度 */
}

/*QTreeView */QScrollBar::add-line:vertical, QTreeView QScrollBar::sub-line:vertical {
    /* 箭头部分的样式，可以隐藏 */
    height: 0;
    width: 0;
}

/* ListView */
QListView {

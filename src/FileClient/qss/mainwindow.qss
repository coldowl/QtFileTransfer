/* MenuBar */
QMenuBar {
    background-color: white;
    border-radius: 5px;
}
QMenuBar::item {
    padding: 5px 10px;
}
QMenuBar::item:selected {

}
QMenuBar::item:pressed {

}

/* GroupBox */
QGroupBox {
    border: 1px solid black;
/*    border-radius: 10px;*/
    margin-top: 20px;
}
QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 3px;
    border-radius: 5px;
}

/* TextBrowser */
QTextBrowser {
    border: 1px solid #d0d0d0;
    border-radius: 5px;
    padding: 5px;
}

/* TextEdit */
QTextEdit {
    border: 1px solid #d0d0d0;
    border-radius: 5px;
    padding: 5px;
}


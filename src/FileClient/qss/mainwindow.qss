/* StatusBar */
QStatusBar {
    background-color: yellow;
    border-top: 1px solid #0056b3;
}

/* ToolBar */
QToolBar {
    background-color: white;
    color: white;
    border-bottom: 1px solid #0056b3;
}
QToolButton {
    border-radius: 5px;
}
